#!/bin/bash
# Clang C++ Build Release

if [ -f $1.cc ]; then
  CxxSource=$1.cc
  OutputSpec="-o $1"
  shift
fi

clang++ -pipe -std=c++20 -pedantic -fopenmp=libomp -march=native -Wall -Wextra -Wno-unknown-pragmas -Wimplicit-fallthrough -DNDEBUG -O3 -ffp-model=precise -fno-stack-protector $CxxSource $@ $OutputSpec
