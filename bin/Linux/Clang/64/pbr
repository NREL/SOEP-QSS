#!/bin/bash
# Clang C++ Build Release

if [ -f $1.cc ]; then
  CxxMainSource=$1.cc
  OutputSpec="-o $1.so"
  shift
fi

clang++ -pipe -std=c++17 -pedantic -shared -fPIC -Wall -Wextra -Winline -Wno-unknown-pragmas -m64 -march=native $(python -m pybind11 --includes) -DQSS_FMU -DNDEBUG -O3 -fno-stack-protector -s $CxxMainSource $@ $OutputSpec
