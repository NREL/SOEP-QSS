#!/bin/bash
# Clang C++ Build Debug

if [ -f $1.cc ]; then
  CxxSource=$1.cc
  OutputSpec="-o $1"
  shift
fi

clang++ -pipe -std=c++20 -pedantic -fopenmp=libomp -march=native -Wall -Wextra -Wno-unknown-pragmas -Wimplicit-fallthrough -O0 -ffp-model=strict -ftrapv -fsanitize=undefined -fsanitize=address -ggdb $CxxSource $@ $OutputSpec
