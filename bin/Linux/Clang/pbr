#!/bin/bash
# Clang C++ Build Release

if [ -f $1.cc ]; then
  CxxSource=$1.cc
  OutputSpec="-o $1.so"
  shift
fi

clang++ -pipe -std=c++20 -pedantic -march=native -shared -fPIC -Wall -Wextra -Wno-unknown-pragmas -Wimplicit-fallthrough $(python -m pybind11 --includes) -DNDEBUG -O3 -ffp-model=precise -fno-stack-protector -s $CxxSource $@ $OutputSpec
