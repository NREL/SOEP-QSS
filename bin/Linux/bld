#!/bin/bash

# Build QSS from a repository root
# Usage: bld <compiler> <build> [make args]
# Example: bld GCC r -j8

source bin/Linux/$1/64/$2/setProject

# QSS
cd src/QSS/app
mak $3 $4 $5 $6 $7 $8 $9
if [ "$2" = "d" ]; then
  if [ "$3" != "clean" ]; then
    cd ../../../tst/QSS/unit
    mak $3 $4 $5 $6 $7 $8 $9 run
  fi
fi
