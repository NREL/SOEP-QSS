#!/bin/bash
# GCC C++ Build Debug

if [ -f $1.cc ]; then
  CxxSource=$1.cc
  OutputSpec="-o $1"
  shift
fi

g++ -pipe -std=c++20 -pedantic -fopenmp -march=native -Wall -Wextra -Wno-unknown-pragmas -Wimplicit-fallthrough=5 -O0 -ffloat-store -fsignaling-nans -ftrapv -fsanitize=undefined -fsanitize=address -ggdb $CxxSource $@ $OutputSpec
