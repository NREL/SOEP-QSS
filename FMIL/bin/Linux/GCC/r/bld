#!/bin/bash
# Build FMIL Linux GCC Release

# Check FMIL_bin is set
if [ -z "$FMIL_bin" ]; then
	echo "FMIL_bin environment variable is not set"
	exit 1
fi

# Set build-specific variables
export CC=gcc
export C_FLAGS="-pipe -std=c2x -march=native -Wall -Wno-address -Wno-unknown-pragmas -Wno-implicit-fallthrough -Wno-unused-function -Wno-unused-label -Wno-unused-parameter -Wno-unused-but-set-parameter -Wno-unused-variable -Wno-unused-but-set-variable -Wno-sign-compare -Wno-pointer-to-int-cast -Wno-int-to-pointer-cast -Wno-implicit-function-declaration -Wno-old-style-definition -Wno-attributes -Wno-misleading-indentation -Wno-strict-aliasing -Wno-stringop-truncation -Wno-maybe-uninitialized -DNDEBUG -O3 -ffloat-store -fno-stack-protector -finline-limit=2000"

# Enter CMake directory
if [ ! -d "$FMIL_cmk" ]; then
	mkdir -p "$FMIL_cmk" >/dev/null 2>&1
fi
cd "$FMIL_cmk"

# Run CMake if needed
if [ ! -f "Makefile" ]; then
	export CMAKE_COLOR_DIAGNOSTICS=OFF
	cmake -G Unix\ Makefiles $QSS/FMIL/src -DFMILIB_INSTALL_PREFIX="$FMIL_ins" -DCMAKE_BUILD_TYPE=Release -DCMAKE_C_FLAGS_RELEASE="$C_FLAGS"
fi

# Run GNU Make
make -O -j$(nproc) install
